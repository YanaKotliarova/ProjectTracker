<Page x:Class="ProjectTracker.MVVM.View.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      
      xmlns:viewmodel="clr-namespace:ProjectTracker.MVVM.ViewModel" 
      d:DataContext="{d:DesignInstance Type=viewmodel:ProjectPageViewModel}"
      
      xmlns:local="clr-namespace:ProjectTracker.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">

    <Grid Background="Beige">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Back" Height="25" Width="50" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                Command="NavigationCommands.BrowseBack"
                Controls:ControlsHelper.ContentCharacterCasing="Upper"/>

        <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding ProjectsList}" SelectedItem="{Binding SelectedProject}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Controls:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE838;" Foreground="Black"/>
                        <TextBlock Text="{Binding Path=Name}" Height="25" Margin="5,0,0,0" Padding="0,3,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Grid.Column="1" Background="White" Margin="0,10,10,10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Project" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" Height="25" Margin="5,0,10,0" Text="{Binding ProjectNameTextBox}"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Description" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" Height="120" Margin="5,0,10,0" TextWrapping="Wrap" Text="{Binding DescriptionTextBox}"/>
            </Grid>

            <Button Margin="0,10,10,0" Content="Update" Height="25" Width="80" 
                    Command="{Binding UpdateProjectCommand}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Controls:ControlsHelper.ContentCharacterCasing="Upper" BorderBrush="#FFCCCCCC"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Labels" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Grid.Column="1" Margin="5,0,10,0">
                    <ListBox ItemsSource="{Binding LabelsList}" SelectedItem="{Binding SelectedLabel}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="{Controls:StaticResource MahApps.Brushes.AccentBase}"/>
                                <Setter Property="Margin" Value="0,0,5,0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Update" Command="{Binding OpenUpdatePanelCommand}"/>
                                <MenuItem Header="Delete" Command="{Binding DeleteLabelCommand}"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        
                        <TextBox Height="25" Width="300" Margin="0,0,15,0"
                                 Text="{Binding AddLabelTextBox}"
                                 Controls:TextBoxHelper.Watermark="Add label"/>
                        
                        <Button Content="Add" Height="25" Width="80" 
                                Command="{Binding AddLabelCommand}"
                                HorizontalAlignment="Right" VerticalAlignment="Top" 
                                Controls:ControlsHelper.ContentCharacterCasing="Upper"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Issues" Height="25" HorizontalAlignment="Left"/>

                <ListBox Grid.Column="1" Margin="5,0,10,0" ItemsSource="{Binding IssuesList}" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Controls:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA38;" Foreground="Black" FontSize="12"/>
                                <TextBlock Text="{Binding Path=Name}" Height="25" Margin="5,0,0,0" Padding="0,3,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Margin" Value="0,0,5,5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>

            <Button Margin="0,10,10,0" Content="Delete" Height="25" Width="80" 
                    Command="{Binding DeleteProjectCommand}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Controls:ControlsHelper.ContentCharacterCasing="Upper" 
                    Background="#FFAB4589" Foreground="White" BorderBrush="White"/>

        </StackPanel>

        <Popup IsOpen="{Binding IsLabelUpdated}" Placement="Center">
            <Border BorderThickness="2" BorderBrush="{Controls:StaticResource MahApps.Brushes.AccentBase}">
                <Grid Height="100" Width="270" Background="Beige">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions> 

                    <Button Grid.Column="1" Height="25" Width="25" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Command="{Binding CloseUpdatePanelCommand}">
                        <Controls:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" Foreground="Black" FontSize="14"/>
                    </Button>

                    <TextBox Grid.RowSpan="2" Height="25" Width="150" Text="{Binding UpdatedLabel}"/>
                    <Button Grid.RowSpan="2" Grid.Column="1" Height="25" Width="80" 
                            Content="Update" Command="{Binding UpdateLabelCommand}"/>
                </Grid>
            </Border>
        </Popup>
        
    </Grid>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadProjectPageCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

</Page>
